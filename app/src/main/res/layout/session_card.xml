<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/session_card">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/bar_night_2"
            android:layout_marginBottom="10dp"
            android:scaleType="centerCrop"
            android:id="@+id/img_session" />

        <TextView
            android:id="@+id/lbl_session_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textSize="24sp"
            android:text="Noche de Clasicos"
            android:textColor="@color/icons"
            android:background="@color/black_alfa_80"
            android:layout_alignBottom="@+id/img_session"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/ic_place"
            android:layout_below="@+id/img_session"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/ic_place_session" />

        <TextView
            android:id="@+id/lbl_session_place"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            style="@style/Base.TextAppearance.AppCompat.Small"
            android:textSize="15sp"
            android:text="Full 80's Bar - Kr 19 #118-52, BogotÃ¡"
            android:textColor="@color/primary_text"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:layout_below="@+id/img_session"
            android:layout_toRightOf="@+id/ic_place_session"
            android:layout_alignBottom="@+id/ic_place_session"
            android:layout_toEndOf="@+id/ic_place_session" />


        <TextView
            android:id="@+id/lbl_session_schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Base.TextAppearance.AppCompat.Small"
            android:text="Termina: 5 Sep 02:00 AM"
            android:textColor="@color/secondary_text"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
            android:layout_below="@+id/lbl_session_place"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="@color/primary"
            android:textAllCaps="true"
            android:text="Unirme"
            android:textSize="15dp"
            android:textStyle="bold"
            android:id="@+id/button"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:layout_marginRight="8dp"
            android:layout_below="@+id/lbl_session_schedule"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
