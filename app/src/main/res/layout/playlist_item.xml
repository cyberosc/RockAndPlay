<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/lbl_order_track"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_margin="10dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center_horizontal|center_vertical"
        android:background="@drawable/shape_order_track"
        android:textColor="@color/divider"
        android:text="1"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/txt_track_name_playlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="16dp"
        android:textColor="@color/primary_text"
        android:text="Scream &amp; Shout"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/lbl_order_track"
        android:layout_toEndOf="@+id/lbl_order_track"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_toLeftOf="@+id/txt_duration_playlist"
        android:layout_toStartOf="@+id/txt_duration_playlist" />

    <TextView
        android:id="@+id/txt_artist_playlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/secondary_text"
        android:text="Erasure"
        android:textSize="13dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_below="@+id/txt_track_name_playlist"
        android:layout_toRightOf="@+id/lbl_order_track"
        android:layout_toEndOf="@+id/lbl_order_track"
        android:layout_marginBottom="5dp"
        android:layout_toLeftOf="@+id/txt_duration_playlist"
        android:layout_toStartOf="@+id/txt_duration_playlist" />

    <TextView
        android:id="@+id/txt_duration_playlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:text="4:35"
        android:layout_alignTop="@+id/txt_track_name_playlist"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>