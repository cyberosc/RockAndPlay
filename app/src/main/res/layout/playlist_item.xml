<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/thumb_album"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_margin="10dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_pause_circle_outline_black_36dp"
        android:tint="@color/accent"/>

    <TextView
        android:id="@+id/txt_track_name_playlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="16dp"
        android:textColor="@color/primary_text"
        android:text="Scream &amp; Shout"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/thumb_album"
        android:layout_toEndOf="@+id/thumb_album"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_toLeftOf="@+id/txt_duration_playlist"
        android:layout_toStartOf="@+id/txt_duration_playlist" />

    <TextView
        android:id="@+id/txt_artist_playlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/secondary_text"
        android:text="Erasure"
        android:textSize="13dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_below="@+id/txt_track_name_playlist"
        android:layout_toRightOf="@+id/thumb_album"
        android:layout_toEndOf="@+id/thumb_album"
        android:layout_marginBottom="5dp"
        android:layout_toLeftOf="@+id/txt_duration_playlist"
        android:layout_toStartOf="@+id/txt_duration_playlist" />

    <TextView
        android:id="@+id/txt_duration_playlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:text="4:35"
        android:layout_alignTop="@+id/txt_track_name_playlist"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>